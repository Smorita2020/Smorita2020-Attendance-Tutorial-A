<% provide(:title, 'Base Sign up') %>
<% provide(:class_text, 'label-signup') %>
<% provide(:button_text, '拠点情報追加') %>
<h1>拠点情報の追加</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @base, local: true do |f| %>
      
      <%= f.label :base_id, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :base_id, class: "form-control" %>
      
      <%= f.label :base_name, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :base_name, class: "form-control" %>
      
      <%= f.label :base_type, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :base_type, class: "form-control" %>
      
      <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-signup btn-#{yield(:button_text)}" %>
    <% end %>
  </div>
</div>